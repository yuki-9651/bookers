<h1>Books</h1>



　<table>
　  <thead>
　   <tr> 
　   
      <th><p>Title</p></th>
      <th><p>Body</p></th>
      
     </tr>
    </thead>    
    
    <% @books.each do |book| %>
    
    <tbody>
     <tr align="left">
     
      <th>
      
        <span><%= book.title %></span>
     
      </th>
      
      <th>
      
        <span><%= book.body %></span>
     
      </th>
      
      <th>
       
        <%= link_to "Show", show_book_path(book.id) %>
      
      </th>
      
      <th>
       
          <%= link_to "Edit", edit_book_path(book.id) %>
     
      </th>
      
      <th>
       
        <%= link_to "Destroy", destroy_book_path(book.id), method: :delete, "data-confirm" => "Are you sure? "%>
      </th>
      
     </tr>
    </tbody>
  
   <% end %>
  
  </table>
  


<h2>New Book</h2>
<%= form_with model: @book do |f| %>
  <h5>Title</h5>
  <%= f.text_field :title %>
	
  <h5>Body</h5>
  <%= f.text_area :body %>
	
  <%= f.submit 'Create Book' %>
<% end %>