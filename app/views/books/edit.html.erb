
<h1>Editing Book</h1>

<%= form_with model: @book, url: update_book_path(@book.id), method: :patch do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>
  
  <h4>Body</h4>
  <%= f.text_area :body %>
  
   <p>
     <%= f.submit 'Update Book' %>
   </p>
   <p>
     <%= link_to "Show", show_book_path(@book.id) %> |
     
     <a href ='/books'>Back</a>
   </p>
   

<% end %>

 